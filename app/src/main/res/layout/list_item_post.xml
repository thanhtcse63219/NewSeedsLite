<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_marginTop="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/image_avatar_default"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/post_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_label_fullname"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/post_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_holder_login"
        android:textSize="12sp"
        android:text="@string/post_time"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/post_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_fullname"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/post_desc"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/post_avatar"
        android:text="@string/post_desc"/>

    <ImageView
        android:id="@+id/post_image"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_desc"
        android:background="@color/gray_reg_frame"/>
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_button_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/state_button_like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.1"
        />
    <TextView
        android:id="@+id/post_count_like"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/post_count_like"
        android:textColor="@color/gray_unselect_icon"
        app:layout_constraintLeft_toRightOf="@id/post_button_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingLeft="10dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_icon_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/button_comment"
        app:layout_constraintLeft_toRightOf="@id/post_count_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/post_count_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/post_count_comment"
        android:textColor="@color/gray_unselect_icon"
        app:layout_constraintLeft_toRightOf="@id/post_icon_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingLeft="10dp"
        />
    <Button
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="30dp"
        android:text="@string/post_button_comment"
        android:background="@color/white"
        android:textColor="@color/purple"
        android:fontFamily="@font/telex"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/post_count_comment"
        app:layout_constraintRight_toRightOf="parent"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>